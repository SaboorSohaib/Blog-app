<section class="container">
<section class="usersContainer">
<% if user_signed_in? %>
<%= button_to(
        "Log Out",
        destroy_user_session_path,
        method: :delete
      ) %>
  <%@users.each do |user| %>
      <div class="user-info">
          <div class="user-img">
              <img src=<%= user.photo %> >
          </div>
          <div class="user-name">
               <%= link_to user.name, "/users/#{user.id}", class: "user" %>
              <div class="posts-number">Number of Posts:<%=user.posts_counter%></div><br>
          </div>
      </div>
  <%end%>
   <% else %>
  <a href='users/sign_in'> Sign In </a>
  <% end %>
</section>