<section class="container">
  <%@users.each do |user| %>
      <div class="user-info">
          <div class="user-img">
              <img src=<%= user.photo %> >
          </div>
          <div class="user-name">
               <%= link_to user.name, "/users/#{user.id}", class: "user" %>
              <div class="posts-number">Number of Posts:<%=user.posts_counter%></div><br>
          </div>
      </div>
  <%end%>
</section>