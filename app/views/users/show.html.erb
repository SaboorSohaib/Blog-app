<section>
  <main>
    <div class="user-section">
       <%= render "user", user: @user%>
    </div>

    <div>
      <span>Bio:</span>
      <%= @user.bio %>
      <div>
        <% @user.most_recent_posts.each do |post| %>
          <%= link_to post.title, "/users/#{@user.id}/posts/#{post.id}" %>
          <div><%= post.text %></div>  
          <div>Comments: <%= post.comments_counter %></div>
          <div>Likes: <%= post.likes_counter %></div>
        <% end %>
      </div>
    <div>
  
    <%= link_to "/users/#{@user.id}/posts" do %>
      <button class= "btn btn-primary">See All Posts</button>
    <% end %>

    <%= link_to new_user_post_path(@user) do %>
      <button class= "btn btn-primary">Create a Post</button>
    <% end %>
  </main>
</section>

