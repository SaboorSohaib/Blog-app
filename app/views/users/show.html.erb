<section>
  <div class="user-info">
    <div class="user-img">
        <img src=<%=@user.photo%> >
    </div>
    <div class="user-name">
        <span><%=@user.name%></span><br>
    </div>
    <div class="user-posts">
         <span>Number of Posts:<%=@user.posts_counter%></span>
    </div>
  </div>
  <div class="user-bio">
    <span>Bio:</span>
    <span><%=@user.bio%></span>
  </div>
 <div class="posts">
      <div class="post-info">
        <span>Post Title:<%=@posts.title%></span>
        <span><%=@posts.text%></span><br>
        <span>Comments:<%=@posts.comments_counter%> Likes:<%=@posts.likes_counter%></span>
      </div>
  </div>
  <%= link_to "/users/#{@user.id}/posts" do %>
    <button type="button" class="all-posts">See all posts</button>
  <% end %>
</section>