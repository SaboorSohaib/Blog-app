<section>
  <div class="user-info">
    <div class="user-img">
        <img src=<%=@user.photo%> >
    </div>
    <div class="user-name">
        <span><%=@user.name%></span><br>
        <div class="posts-number">Number of Posts:<%=@user.posts_counter%></div>
    </div>
   
  </div>
  
    <div class="post-content">
      <%=@user.posts.each do |post|%>
       <b><%= link_to post.title, "/users/#{@user.id}/posts/#{post.id}" %></b>
       <div><%=post.text%></div>
       <div>Comments:<%=post.comments_counter%></div> <div>Likes:<%=post.likes_counter%></div>
       <div>
        <%post.most_recent_comment.includes(:author).each do |comment|%>
        <span><%user = comment.author.name%></span>
        <div><%=user%>: <%=comment.text%></div>
        <%end%>
       </div>
      <%end%>
    </div>
</section>