<section>
  <div class="user-info">
    <div class="user-img">
        <img src=<%=@user.photo%> >
    </div>
    <div class="user-name">
        <span><%=@user.name%></span><br>
    </div>
    <div class="user-posts">
         <span>Number of Posts:<%=@user.posts_counter%></span>
    </div>
  </div>
  
    <div class="post-content">
      <%=@user.posts.each do |post|%>
       <%= link_to post.title, "/users/#{@user.id}/posts/#{post.id}" %>
       <div><%=post.text%></div>
       <div>Comments:<%=post.comments_counter%></div> <div>Likes:<%=post.likes_counter%></div>
       <div>
        <%post.most_recent_comment.includes(:user).each do |comment|%>
        <span><%user = comment.user.name%></span>
        <span><%=user%>: <%=comment.text%></span>
        <%end%>
       </div>
      <%end%>
    </div>
</section>